<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>tribefire.js</groupId>
        <artifactId>parent</artifactId>
        <version>[3.0,3.1)</version>
    </parent>
    <artifactId>gwt-platform-api</artifactId>
    <version>3.0.15</version>
    <properties>
        <gwt-compatible>true</gwt-compatible>
        <jsinterop>true</jsinterop>
    </properties>
    <licenses>
        <license>
            <name>Apache License, Version 2.0</name>
            <url>https://www.apache.org/licenses/LICENSE-2.0</url>
            <distribution>repo</distribution>
            <comments>A business-friendly OSS license</comments>
        </license>
    </licenses>
    <dependencies>
        <!-- For historical reasons the PlatformApi does depend on a few other artifacts, but it must NOT have any further dependencies! 
		 If a new method/class/feature needs further dependencies, it has to be added to another artifact.
		 If you are not sure, you can e.g. use the OtherTools. -->
        <dependency>
            <groupId>tribefire.js</groupId>
            <artifactId>gwt-codec-api</artifactId>
            <version>${V.tribefire.js}</version>
        </dependency>
        <dependency>
            <groupId>com.braintribe.common</groupId>
            <artifactId>common-api</artifactId>
            <version>${V.com.braintribe.common}</version>
        </dependency>
        <dependency>
            <groupId>com.braintribe.common</groupId>
            <artifactId>logging</artifactId>
            <version>${V.com.braintribe.common}</version>
        </dependency>
        <dependency>
            <groupId>com.braintribe.common</groupId>
            <artifactId>platform-exceptions</artifactId>
            <version>${V.com.braintribe.common}</version>
        </dependency>
        <dependency>
            <groupId>com.braintribe.common</groupId>
            <artifactId>async-api</artifactId>
            <version>${V.com.braintribe.common}</version>
        </dependency>
        <dependency>
            <groupId>com.braintribe.common</groupId>
            <artifactId>jsinterop-base</artifactId>
            <version>${V.com.braintribe.common}</version>
            <?tag js?>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <version>${V.com.google.gwt}</version>
        </dependency>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-dev</artifactId>
            <version>${V.com.google.gwt}</version>
            <scope>provided</scope>
            <exclusions>
            	<!-- This brings stuff like org.w3c.dom.Document (via transitive deps) which causes issues for newer java versions -->
	            <exclusion>
		            <groupId>net.sourceforge.htmlunit</groupId>
		            <artifactId>htmlunit</artifactId>
	            </exclusion>
            </exclusions>
        </dependency>
        <!-- Before modifying the PlatformApi dependencies, please read the comment at the top of the dependencies section! -->
    </dependencies>
</project>